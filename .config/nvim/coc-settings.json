{
  "suggest.noselect": false,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "html",
    "json",
    "css",
    "scss",
    "go"
  ],
  "elixir.pathToElixirLS": "~/projects/elixir-ls/rel/language_server.sh",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.work",
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  }
}
