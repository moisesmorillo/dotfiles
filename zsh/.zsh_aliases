#!/bin/bash

alias nv="nvim"
alias ff="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"
alias ls="eza --icons=always"
alias ll="eza --icons=always --long --all --header"
alias tree="eza --icons=always --total-size --tree"
alias lzg="lazygit -ucd ~/.config/lazygit"
alias lzd="lazydocker"
alias ssh='TERM=xterm-256color ssh'
alias cat="bat"
alias kubectl="minikube kubectl --"
alias cd="z" # zoxide
alias docker="podman"

# custom git aliases
alias gfp="git fetch --prune"

# Neovim Aliases
alias nvim-lazytest="NVIM_APPNAME=lazytest nvim"
alias nvim-nvchad="NVIM_APPNAME=nvchad nvim"
alias nvim-kickstart="NVIM_APPNAME=kickstart nvim"
alias nvim-cybernvim="NVIM_APPNAME=cybernvim nvim"
alias nvim-astronvim="NVIM_APPNAME=astronvim nvim"
