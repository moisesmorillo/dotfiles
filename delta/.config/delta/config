# Delta configuration for Rose Pine theme

[delta]
	navigate = true
	line-numbers = true
	syntax-theme = "base16"
	paging = never
	side-by-side = true
	wrap-max-lines = unlimited

	# Rose Pine colors
	minus-style = "syntax #3f2d3d"
	minus-emph-style = "syntax #8b334a"
	minus-non-emph-style = "syntax #3f2d3d"
	plus-style = "syntax #273a30"
	plus-emph-style = "syntax #4a6654"
	plus-non-emph-style = "syntax #273a30"

	# Line numbers
	line-numbers-minus-style = "#eb6f92"
	line-numbers-plus-style = "#9ccfd8"
	line-numbers-left-style = "#6e6a86"
	line-numbers-right-style = "#6e6a86"

	# File headers
	file-style = "#ebbcba bold"
	file-decoration-style = "#ebbcba ul"

	# Hunk headers
	hunk-header-style = "syntax #403d52"
	hunk-header-decoration-style = "#f6c177 box"

[delta "interactive"]
	keep-plus-minus-markers = false
